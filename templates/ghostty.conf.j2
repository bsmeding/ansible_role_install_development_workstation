# Ghostty Terminal Configuration
# Generated by preflight_dev_workstation role
# Ghostty documentation: https://ghostty.org/docs/config

# =============================================================================
# Theme & Appearance
# =============================================================================
theme = dark:GruvboxDark,light:GruvboxLight

# Font configuration
font-family = JetBrains Mono
font-size = 13
font-feature = -calt

# Window
window-padding-x = 4
window-padding-y = 4
window-decoration = true
window-theme = auto

# Cursor
cursor-style = block
cursor-style-blink = true

# Background & Colors
background-opacity = 0.95
unfocused-split-opacity = 0.7

# =============================================================================
# Terminal Behavior
# =============================================================================

# Shell
shell-integration = bash,zsh,fish
shell-integration-features = cursor,sudo,title

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# =============================================================================
# Keybindings
# =============================================================================

# Tab management
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+shift+left=goto_tab:previous
keybind = super+shift+right=goto_tab:next

# Split management
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+left=goto_split:left
keybind = super+right=goto_split:right
keybind = super+up=goto_split:top
keybind = super+down=goto_split:bottom

# Font size
keybind = super+equal=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+0=reset_font_size

# Other
keybind = super+comma=reload_config
keybind = super+n=new_window
keybind = super+shift+c=copy_to_clipboard
keybind = super+shift+v=paste_from_clipboard

# =============================================================================
# Advanced
# =============================================================================

# Performance
macos-non-native-fullscreen = false
macos-titlebar-style = native

# Window size
window-width = 120
window-height = 40

# Scrollback
scrollback-limit = 10000

# Links
link-url = true

# Confirm before closing
confirm-close-surface = false
quit-after-last-window-closed = false

